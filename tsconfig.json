{
  "include": [
    "packages/affix",
    "packages/alert",
    "packages/attention",
    "packages/badge",
    "packages/box",
    "packages/breadcrumbs",
    "packages/button",
    "packages/card",
    "packages/expandable",
    "packages/modal",
    "packages/pill",
    "packages/select",
    "packages/textfield",
    "packages/toast",
    "packages/datepicker",
    "packages/link",
    "packages/combobox",
    "packages/switch",

    // unreleased components
    "packages/slider",
    "packages/deadtoggle",
    "packages/pageindicator",
    "packages/pagination",
    "packages/radio",
    "packages/checkbox",
    "packages/stepindicator",
    "packages/tabs",
    "packages/textarea",
    "setup-tests.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "bundler"
  }
}
