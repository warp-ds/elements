{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["nb", "fi", "da", "sv"],
  "tsConfig": "./tsconfig.json",
  "inputFiles": [
    "packages/**/index.ts",
    "packages/**/*.ts"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./packages/generated"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff"
  }
}
